@model MJC_Blogs.Models.RegisterViewModel
@{
    ViewBag.Title = "Username Change";
}
    <div class="container default-container">
        <h2>@ViewBag.Title.</h2>

        @using (Html.BeginForm("ChangeUsername", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
        {
            @Html.AntiForgeryToken()
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.DisplayName,"Username", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-outline-success" value="Update" />
                </div>
            </div>
        }
        @Html.ActionLink("Back To Manage", "Index")
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
