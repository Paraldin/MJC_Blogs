@model IEnumerable<MJC_Blogs.Models.Blogs>

@{
    ViewBag.Title = "Index";
}

<!-- Hero Section-->
<section style="background: url(/Template/img/hero.jpg); background-size: cover; background-position: center;" class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <h1>Mark Corum's Blog</h1><a href="#" class="hero-link">Discover More</a>
            </div>
        </div><a href="#" class="continue link-scroll"><i class="fa fa-long-arrow-down"></i> Scroll Down</a>
    </div>
</section>

        <!-- Post-->
<section class="featured-posts no-padding-top">
    <div class="container">
        @{
            int counter = 0;
            foreach (var item in Model)
            {
                string blogBody = item.Snippet;
                string snippet = blogBody.Substring(0, blogBody.Length > 80 ? 80 : blogBody.Length);
                counter++;
                if (counter % 2 != 0)
                {
                    <div class="row d-flex align-items-stretch">
                        <div class="text col-lg-7">
                            <div class="text-inner d-flex align-items-center">
                                <div class="content">
                                    <header class="post-header">
                                        <a href="@Url.Action("Details", "Blogs", new { slug = item.Slug })">
                                            <h2 class="h4">@item.Title</h2>
                                        </a>
                                    </header>
                                    <p>@Html.Raw(snippet)<a href="@Url.Action("Details", "Blogs", new { slug = item.Slug })" style="color:blue">...</a></p>
                                    <footer class="post-footer d-flex align-items-center">
                                        <a href="#" class="author d-flex align-items-center flex-wrap">
                                            <div class="avatar"><img src="~/Template/img/avatar-1.jpg" alt="..." class="img-fluid"></div>
                                            <div class="title"><span>Mark Corum</span></div>
                                        </a>
                                        <div class="date"><i class="icon-clock"></i> @item.Created.Day @item.Created.ToString("MMMM"), @item.Created.ToString("yyyy")</div>
                                        <div class="comments"><i class="icon-comment"></i>12</div>
                                    </footer>
                                </div>
                            </div>
                        </div>
                        <a href="@Url.Action("Details", "Blogs", new { slug = item.Slug })" class="image col-lg-5" style="min-height:304px;"><img src="~/Template/img/featured-pic-1.jpeg" alt="..."></a>
                    </div>
                }
                else
                {
                    <div class="row d-flex align-items-stretch">
                        <a href="@Url.Action("Details", "Blogs", new { slug = item.Slug })" class="image col-lg-5" style="min-height:304px;"><img src="/Template/img/featured-pic-2.jpeg" alt="..."></a>
                        <div class="text col-lg-7">
                            <div class="text-inner d-flex align-items-center">
                                <div class="content">
                                    <header class="post-header">
                                        <a href="@Url.Action("Details", "Blogs", new { slug = item.Slug })">
                                            <h2 class="h4">@item.Title</h2>
                                        </a>
                                    </header>
                                    <p>@Html.Raw(snippet)<a href="@Url.Action("Details", "Blogs", new { slug = item.Slug })" style="color:blue">...</a></p>
                                    <footer class="post-footer d-flex align-items-center">
                                        <a href="#" class="author d-flex align-items-center flex-wrap">
                                            <div class="avatar"><img src="/Template/img/avatar-2.jpg" alt="..." class="img-fluid"></div>
                                            <div class="title"><span>Mark Corum</span></div>
                                        </a>
                                        <div class="date"><i class="icon-clock"></i>@item.Created.Day @item.Created.ToString("MMMM"), @item.Created.ToString("yyyy")</div>
                                        <div class="comments"><i class="icon-comment"></i>12</div>
                                    </footer>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>
</section>
